<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Generations <small>list</small></h1>
        <ol class="breadcrumb">
            <li><a href="/">Home</a>
            </li>
            <li class="active">Generations</li>
        </ol>
    </div>
</div>
<!-- /.row -->

<!-- Content Row -->
<div class="row text-center row-same-height">

    <% @generations.each do |g| %>
        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail thumbnail-games">
                <div class="caption">
                    <h3><%=g.name%></h3>
                    <p><a href="/generation/<%=g.id%>" class="btn btn-default">Read More</a></p>
                </div>
            </div>
        </div>
    <% end %>

</div>
<!-- /.row -->

<div class="row">
    <%= paginate @generations %>
</div>