<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Games
            <small>for <%=@genre.name%> platform</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/">Home</a>
            </li>
            <li><a href="/genres" title="Genres">Genres</a></li>
            <li class="active"><%=@genre.name%></li>
        </ol>
    </div>
</div>
<!-- /.row -->

<!-- Content Row -->
<div class="row text-center row-same-height">

    <% if @games.present?%>
        <% @games.each do |g| %>
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail thumbnail-games">
                    <%=image_tag(g.image.url(:medium), width: 350, height: 180) if g.image.present? %>
                    <div class="caption">
                        <h3><%=g.title%> <small>for <%=g.platform.name%></small></h3>
                        <p><a href="/game/<%=g.id%>" class="btn btn-default">Read More</a></p>
                    </div>
                </div>
            </div>
        <% end %>
    <% else %>
        <div class="col-md-12 centered">
            <h2>There are no registered games in this genre.</h2>
        </div>
    <% end %>

</div>
<!-- /.row -->

<div class="row">
    <%= paginate @games
     %>
</div>