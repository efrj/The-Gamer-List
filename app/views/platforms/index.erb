<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Platforms <small>list</small></h1>
        <ol class="breadcrumb">
            <li><a href="/">Home</a>
            </li>
            <li class="active">Platforms</li>
        </ol>
    </div>
</div>
<!-- /.row -->

<!-- Content Row -->
<div class="row text-center row-same-height">

    <% @platforms.each do |p| %>
        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail thumbnail-games">
                <%=image_tag(p.image.url(:medium), width: 350, height: 180) if p.image.present? %>
                <div class="caption">
                    <h3><%=p.name%></h3>
                    <p><a href="/platform/<%=p.id%>" class="btn btn-default">Read More</a></p>
                </div>
            </div>
        </div>
    <% end %>

</div>
<!-- /.row -->

<div class="row">
    <%= paginate @platforms %>
</div>